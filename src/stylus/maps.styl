.map-list
    display flex
    flex-direction row
    flex-wrap wrap
    // justify-content center
    align-content flex-start
    align-items flex-start
    // border-left 1px solid rgba(0,0,0, 0.1)
    // border-right 1px solid rgba(0,0,0, 0.1)
    // box-shadow 0 0 12px rgba(50, 0, 50, 0.5)
    // background white

.map-list-item
    position relative
    display inline-block
    height 90px
    flex 1 1 320px
    margin 1px
    background-color white
    background-position center
    background-size cover
    font-size 12px
    transition background-size 0.2s box-shadow 0.2s height 0.2s

    &:hover
        background-size 102.5%
        opacity 1.0
        cursor pointer

    &:hover > .map-list-item-overlay
        background rgba(0, 0, 0, 0.3)

        .map-zones, .map-author, .map-tiers
            opacity 1

.map-list-item-overlay
    padding 6px
    display block
    height 100%
    background rgba(0, 0, 0, 0)
    transition background 0.2s

    .map-zones, .map-author, .map-tiers
        opacity 1

.map-list-item-inner
    position relative
    height 100%
    display block

.map-name-container
    background-color rgba(0, 0, 0, 0.7)
    border-radius 8px
    padding 4px 8px

.map-list-item-inner
    color white
    font-size 14px
    font-weight bold

.map-name-container
    position absolute
    top 0
    left 0

.map-tiers
    position absolute
    bottom 0
    left 0

    .tier-0
        color rgb(255,75,75)

    .tf-icon
        position relative
        height 28px
        width 28px

    .map-tier-inner
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        text-shadow 0 0 3px black, 0 0 3px black, 0 0 3px black, 0 0 3px black, 0 0 3px black, 0 0 3px black, 0 0 3px black, 0 0 3px black, 0 0 3px black, 0 0 3px black


.map-author
    margin-top 0.5em
