.map-list-item
    width 320px
    height 180px
    display inline-block
    margin-right 5px
    margin-bottom 1px
    position relative
    // border-radius 4px
    // border 1px solid black
    box-shadow 0px 0px 2px black
    font-family 'Montserrat'

.map-name, .map-info
    position absolute
    color white
    background-color rgba(0, 0, 0, 0.7)
    padding 4px
    border-radius 3px
    box-shadow 0px 0px 2px black

.map-name
    top 6px
    left 6px

.map-info
    top 6px
    right 6px
