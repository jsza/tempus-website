.steamavatar
    display inline-block

    border-width 1px
    border-style solid
    // border-radius 4px
    // outline 1px solid black
    box-shadow 0 0 2px black
    // outline 1px solid black

    &.mini
        border-width 2px
        box-shadow 0 0 1px black
        width 28px
        height 28px

    &.small
        border-width 2px
        width 38px
        height 38px

    &.medium
        border-width 2px
        border-radius 8px
        width 68px
        height 68px

    &.large
        border-width 8px
        width 188px
        height 188px

    &.offline
        border-color #706c6b

    &.online
        border-color #7bafd6

    &.in-game
        border-color #9bc861
