.player-overview-header
    position relative

.player-overview-avatar
    float left
    margin-right 12px

.player-overview-header-content
    h1
        margin-top 0

.player-overview-stats
    padding-left 0
    // margin-bottom 0
    li
        list-style none

.player-overview-stats-icon
    position absolute
    right 8px
    top 6px
    opacity 0.4
    // font-size 48px
    color black

    &:hover
        color black
        opacity 0.7

.player-overview-content
    margin-top 20px
    // position relative

.site-panel
    position relative
    box-shadow 0 1px 2px rgba(0,0,0,.05)
    background-color #fff
    border 1px solid #ddd
    border-radius 4px
    margin-bottom 20px
    padding 15px

    h4, h3
        margin-top 0

.player-overview-class-container
    background-position right 6px top 6px
    background-repeat no-repeat
    background-size 48px
    padding 0

    &.soldier
        background-image url("/static/img/icons/soldier.png")

    &.demoman
        background-image url("/static/img/icons/demoman.png")

    & .inner
        padding 15px
        height 100%
        background-color rgba(255, 255 255, 0.7)
