.MapOverview
    // padding-top 16px
    padding-left 0
    padding-right 0
    // box-shadow 0 0 2px black
    position relative
    // background rgba(255, 255, 255, 0.2)
    color rgb(230, 230, 230)
    // background black

.MapOverview-background
    position fixed
    top 0
    left -8px
    right -8px
    display block
    z-index -1
    height 100%
    background-position top
    background-repeat no-repeat
    background-size cover
    filter blur(4px)

.MapOverview-header
    // margin-top 0
    margin-bottom 15px
    width 100%
    background rgba(173,173,173,0.27)
    background linear-gradient(135deg,
                               darken(rgba(45,70,95,0.8), 28%),
                               darken(rgba(64,123,130,0.8), 28%),
                               darken(rgba(31,120,130,0.8), 28%)
                               )

    border-bottom 1px solid #6f8d8c
    text-shadow 1px 1px 0 black
    box-shadow 0 2px 5px rgba(8,8,8,0.4)
    width 100%
    z-index 100
    padding 0 0 8px 0
    text-align center

    h1
        background rgba(20, 20, 20, 0.7)
        box-shadow 0 0 4px black
        border-bottom 1px solid rgba(255,255,255,0.15)
        margin-top 0
        padding 8px

    h1 small
        color rgb(180, 180, 180)

    .MapOverview-header-inner
        position relative

    .MapOverview-header-video-buttons
        display block
        position absolute
        right 0
        bottom 0

        .fa-youtube
            font-size 32px
            vertical-align middle

        .video-button
            cursor pointer

            &.disabled
                opacity 0.3
                cursor not-allowed

.MapOverview-body
    .class-tabs
        float left
        padding-left 0
        margin-bottom 0
        list-style none

        li
            float left
            margin-bottom -1px
            position relative
            display block

            :hover
                border-color black

            &.active > a
                background rgba(50, 50, 50, 0.6)

            > a
                background rgba(0, 0, 0, 0.6)
                color rgb(230, 230, 230)
                position relative
                display block
                border 1px solid black
                border-bottom-color transparent
                border-radius 4px 0 0 0
                padding 10px 15px

            &:not(:last-child) a
                border-right 1px solid black

            &:last-child a
                border-radius 0 4px 0 0
                border-left 0


.zone-panel-container
    display flex
    justify-content center

.zone-panel
    flex 1 1 100px
    background linear-gradient(rgba(173,173,173,0.27), rgba(88,88,88,0.27))
    box-shadow 3px 3px 5px rgba(8,8,8,0.4)
    text-shadow 1px 1px #000
    border 0
    margin-bottom 20px
    margin-left 8px

    .panel-heading
        border 0
        padding 0
        border-bottom 0

.zone-tabs
    padding-left 0
    list-style none
    margin-bottom 0

    display flex
    justify-content center
    flex-wrap wrap

    border-right 1px solid rgba(255, 255, 255, 0.3)
    border-bottom 1px solid rgba(255, 255, 255, 0.3)

    li
        background rgba(255, 255, 255, 0.2)
        display inline-block
        padding 4px 12px
        text-align center
        font-weight italic

        opacity 0.8

        border 1px solid rgba(255, 255, 255, 0.3)
        border-right 0
        border-bottom 0


        // min-width 90px
        // max-width 100px
        flex-basis auto
        flex-grow 1

        &:hover, &.active
            opacity 1

        &.active
            background rgba(100, 100, 100, 0.2)
            box-shadow 0 0 3px black inset

.map-info-table
    margin 0 auto
    width auto
    margin-bottom 8 px

    & > tbody > tr > td
        border-top 0

.map-info-list
    list-style none
    padding-left 0
    margin-bottom 0

    li
        display inline

        &:not(:first-child):before
            content: ' | '
