.MapOverview
    padding-top 16px
    padding-left 0
    padding-right 0
    box-shadow 0 0 2px black
    position relative
    background rgba(255, 255, 255, 0.2)
    // background black

.MapOverview-background
    position fixed
    top 0
    left -8px
    right -8px
    display block
    z-index -1
    height 1000px
    background-position top
    background-repeat no-repeat
    background-size cover

.MapOverview-header
    margin-bottom 15px
    width 100%
    background rgba(10, 10, 10, 0.8)
    color white
    width 100%
    z-index 100
    padding 40px

    h1
        margin-top 0

    h1 small
        color rgb(180, 180, 180)

    .MapOverview-header-inner
        position relative

    .MapOverview-header-video-buttons
        display block
        position absolute
        right 0
        bottom 0

        .fa-youtube
            font-size 32px
            vertical-align middle

        .video-button
            cursor pointer

            &.disabled
                opacity 0.3
                cursor not-allowed
    // .map-overview-header

.MapOverview-body
    padding-left 15px
    padding-right 15px
