    //              rgba(0, 0, 0, 0.15) 8px,
    //              rgba(0, 0, 0, 0.15) 16px
    //            );

    &:hover
        background rgba(255, 255, 255, 0.1)

    td
        padding 5px 12px !important
        vertical-align middle !important

    .rank
        color rgb(200, 200, 200)
        // font-size 13px
        text-align right

    .avatar
        padding-right 0
        text-align right

    .name
        padding-left 8px
        text-overflow ellipsis

        a
            color rgb(0, 180, 240)
            &:hover
                color rgb(0, 200, 255)
                text-decoration none

        .name-inner
            display block
            white-space nowrap

        .steamavatar
            height 28px
            width 28px
            border-radius 50%
            border-width 2px
            margin-right 4px
            box-shadow 1px 0 4px black


    .duration
        font-family Droid Sans Mono
        font-weight bold
        text-align right

    .duration a
        color inherit

    .compared
        color rgb(150, 150, 150)
        font-size 12px

    .date
        text-align right
        font-size 13px
        color rgb(200, 200, 200)

    &.rank-1
        // color gold
        // background darken(rgba(255, 215, 0, 0.6), 75%) !important
        // border 1px solid darken(rgba(255, 215, 0, 0.6), 50%)
        border-left 0
        border-right 0
        position relative

        td
            padding-top 8px

        // &:hover
        //     background darken(rgba(255, 215, 0, 0.65), 70%)

        .rank
            color darken(gold, 20%)
            // font-size 16px

        .name-inner
            // padding 4px
            padding-right 8px
            position relative
            background linear-gradient(to right, #736100 0%, #564904 100%)
            // margin-left -4px
            margin-right 21px
            // min-width 300px
            border-top-left-radius 36px
            border-bottom-left-radius 36px

            filter drop-shadow(1px 0 1px black)

            &:after
                content ''
                position absolute
                right -21px
                top 0
                border-top 14px solid #564904
                border-bottom 14px solid #564904
                border-right 21px solid transparent

            a.player-link
                overflow hidden
                text-overflow ellipsis
                min-width 300px

        .name a
            color gold

        .duration span
            border-bottom-color rgb(127, 107, 0)

    // &.rank-1, &.rank-2, &.rank-3
