    &:nth-of-type(odd)
        background rgba(255, 255, 255, 0.05)
    //     background repeating-linear-gradient(
    //              -45deg,
    //              rgba(255, 255, 255, 0.05),
    //              rgba(255, 255, 255, 0.05) 8px,
    //              rgba(255, 255, 255, 0.075) 8px,
