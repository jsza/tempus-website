.MapOverview-Authors
    // max-width 600px
    ul
        list-style none
        padding-left 0

        li
            // display inline-block
            margin-bottom 4px
            // margin-right 4px

            .author-link
                display inline-block
                width 500px
                padding-left 43px
                padding-right 20px
                border-radius 20px
                box-shadow 0 0 4px rgba(0, 0, 0, 0.5)
                line-height 38px
                font-weight bold
                overflow hidden
                white-space nowrap
                text-overflow ellipsis
                background-image linear-gradient(45deg, rgba(255, 255, 255, 0.2) , rgba(255, 255, 255, 0.1) )

                &:hover
                    background rgba(255, 255, 255, 0.2)

            .steamavatar
                height 30px
                width 30px
                border-radius 50%
                box-shadow 0 0 4px rgba(0, 0, 0, 0.5)

            .currentname
                font-weight normal
