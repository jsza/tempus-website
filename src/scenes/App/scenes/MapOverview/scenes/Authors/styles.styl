.MapOverview-Authors
    // max-width 600px
    ul
        list-style none
        padding-left 0

        li
            // display inline-block
            margin-bottom 4px
            // margin-right 4px

            .author-link
                display inline-block
                width 500px
                padding-left 8px
                padding-right 8px
                border-radius 6px
                box-shadow 0 0 4px rgba(0, 0, 0, 0.5)
                line-height 2.5em
                font-weight bold
                overflow hidden
                white-space nowrap
                text-overflow ellipsis
                background-image linear-gradient(45deg, rgba(255, 255, 255, 0.2) , rgba(255, 255, 255, 0.1) )

                &:hover
                    background rgba(255, 255, 255, 0.2)

                .map-count
                    float right
                    color rgba(255, 255, 255, 0.7)
                    font-size 90%

            .steamavatar.small
                font-size inherit
                height 2.5em
                width 2.5em
                border-radius 6px
                box-shadow 0 0 4px rgba(0, 0, 0, 0.5)

            .currentname
                font-weight normal
