html, body
    height 100%

body

    // background-color #F9F9F9
    background-color rgb(55, 70, 80)
    font-family Noto Sans,Helvetica Neue,Helvetica,Arial,sans-serif

h1, h2, h3
    font-family Noto Serif,Helvetica Neue,Helvetica,Arial,sans-serif

    &.page-title
        margin-top 0

table
    td.shrink
        white-space nowrap
    td.expand
        width 99%

.App
    display flex
    flex-direction column
    min-height 100vh

    .content
        flex 1
        position relative

.tf-icon
    background-size cover
    display inline-block
    vertical-align middle
    &.sm
        width 28px
        height 28px

    &.mini
        width 24px
        height 24px

    &.large
        width 48px
        height 48px

    &.demoman
        background-image url('https://static.tempus.xyz/website/img/icons/demoman.png')

    &.soldier
        background-image url('https://static.tempus.xyz/website/img/icons/soldier.png')

.App-footer
    background-color rgba(2, 2, 2, 0.6)
    // background-color rgb(60, 60, 60)
    border-top 1px solid rgb(20, 20, 20)
    border-bottom 0
    padding 10px 15px
    text-align center
    &, a
        // color rgb(150, 150, 150)
        color rgba(255, 255, 255, 0.7)
    // font-size 12px
    // background-color: #ededed
    // min-height 300px
    // background-image url('https://raw.githubusercontent.com/ddormer/bdm/master/bdm/static/images/cover.png')
    // background-repeat no-repeat
    // background-position center top

.app-container
    padding-top 41px
    // padding-bottom 15px
    min-height 100%

    &.solid
        padding-top 56px
        // background-color #F9F9F9
        background white

#navbar-main
    background #222
    // background rgb(40, 40, 40)
    border-bottom 1px solid black
    min-height 40px
    box-shadow 0 0 4px black

    .navbar-brand
        height 40px
        padding 10px
        font-family 'Montserrat'
        color rgb(0, 180, 220)
        &:hover
            color rgb(0, 220, 250)

    .navbar-nav > li > a
        padding 10px 15px

    .navbar-toggle
        margin-top 3px
        margin-bottom 3px

.navbar-login-dropdown
    margin-left 8px

    > ul > li
        padding 0

        & > a
            &:hover, &:focus
                background none

.navbar-login-container
    // margin-left 32px

    // .login-button
    //     padding 8px

    // .dropdown-toggle
    //     padding 8px
    padding 0 8px !important

    .avatar-container
        .steamavatar
            border-width 1px
            height 24px
            width 24px

        .playername
            margin-left 4px
            vertical-align middle
            display inline-block
            max-width 130px
            text-overflow ellipsis
            overflow hidden
            white-space nowrap

    &:hover
        color white

.app-search-container
    position relative
    display inline-block

    .app-search-input
        width 180px
        display inline-block
        padding 10px
        background rgb(15, 15, 15)
        outline 0
        border 0
        color #9d9d9d
        &:focus
            color rgb(240, 240, 240)

    .list-group
        min-width 300px
        max-height 400px
        overflow-y auto
        li
            padding 8px 12px
            min-width 80px
        & li:first-child
            border-top-left-radius 0
            border-top-right-radius 0
        position absolute
        top calc(100% + 1px)
        right 0

.table-vertical-align
    & td
        vertical-align middle !important

.app-tooltip
    position absolute
    z-index 1070
    display block

.capitalize
    text-transform capitalize

.small-input
    padding 3px 6px
    height auto
